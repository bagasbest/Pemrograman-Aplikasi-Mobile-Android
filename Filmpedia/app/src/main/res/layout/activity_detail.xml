<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@android:color/darker_gray"
                android:contentDescription="@string/img" />

        <TextView
            android:id="@+id/judul_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_detail"
            android:layout_marginStart="16dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tanggal_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul_detail"
            android:layout_toEndOf="@+id/img_detail"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/genre_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tanggal_detail"
            android:layout_toEndOf="@+id/img_detail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="50dp"/>

        <Button
            android:id="@+id/btn_vote"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/genre_detail"
            android:layout_toEndOf="@id/img_detail"
            android:background="@drawable/rounded_btn"
            android:drawableStart="@drawable/ic_thumb_up_black_24dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/vote"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/star"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_stars_black_24dp"
            android:layout_below="@+id/img_detail"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/rating_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_detail"
            android:layout_toEndOf="@id/star"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/desc_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_detail"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>


    </RelativeLayout>

</ScrollView>